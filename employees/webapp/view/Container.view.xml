<mvc:View
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
>
    <f:FlexibleColumnLayout
        id="container"
        layout="{view>/layout}"
    >
        <f:beginColumnPages>
            <mvc:XMLView
                id="master"
                viewName="com.logaligroup.employees.view.Main"
                type="XML"
            />
        </f:beginColumnPages>

        <f:midColumnPages>
            <mvc:XMLView
                id="details"
                viewName="com.logaligroup.employees.view.Details"
                type="XML"
            />
        </f:midColumnPages>
    </f:FlexibleColumnLayout>
</mvc:View>
